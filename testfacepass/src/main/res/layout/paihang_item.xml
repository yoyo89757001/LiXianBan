<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="190px"
    android:layout_marginTop="6px"
    android:background="@drawable/you_bg"
    android:layout_height="90px">

    <ImageView
        android:id="@+id/touxiang"
        android:scaleType="fitXY"
        android:padding="4dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10px"
        android:layout_marginTop="10px"
        android:layout_marginBottom="10px"
        android:layout_width="60px"
        android:layout_height="70px" />


    <TextView
        android:textSize="16px"
        android:textColor="@color/write"
        android:id="@+id/xuhao"
        android:layout_marginLeft="10px"
        android:layout_marginTop="10px"
        android:layout_toRightOf="@+id/touxiang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



    <LinearLayout
        android:id="@+id/ttt"
        android:orientation="horizontal"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_marginLeft="10px"
        android:gravity="center_vertical"
        android:layout_below="@+id/xuhao"
        android:layout_toRightOf="@+id/touxiang"
        android:layout_height="wrap_content">

        <ImageView
            android:background="@drawable/shijian_bg"
            android:layout_width="18px"
            android:layout_height="18px" />

        <TextView
            android:textSize="18px"
            android:textColor="@color/red"
            android:id="@+id/shijian"
            android:layout_marginLeft="6px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginLeft="10px"
        android:layout_below="@+id/ttt"
        android:layout_toRightOf="@+id/touxiang"
        android:layout_height="wrap_content">

        <ImageView
            android:background="@drawable/guanzhu_bg"
            android:layout_width="18px"
            android:layout_height="18px" />

        <TextView
            android:textSize="16px"
            android:textColor="@color/write"
            android:id="@+id/guanzhu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_marginLeft="10px"
            android:background="@drawable/cishu_bg"
            android:layout_width="18px"
            android:layout_height="18px" />

        <TextView
            android:textSize="16px"
            android:textColor="@color/write"
            android:id="@+id/cishu"
            android:layout_marginLeft="2px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>


</RelativeLayout>